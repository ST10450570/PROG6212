@model IEnumerable<Contract_Monthly_Claim_System.Models.Claim>
@{
    ViewData["Title"] = "Claims Review";
    var userRole = ViewBag.UserRole ?? "Reviewer";
    var isManager = User.IsInRole("Manager");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-list-check me-2"></i>Claims Requiring Review</h2>
            <p class="text-muted">@Model.Count() claims awaiting your attention</p>
        </div>
        <span class="badge bg-primary fs-6">Role: @userRole</span>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Review Queue</h5>
            <div>
                @if (userRole == "Coordinator")
                {
                    <span class="badge bg-warning">Department Coordinator</span>
                }
                else if (userRole == "Manager")
                {
                    <span class="badge bg-info">Academic Manager</span>
                }
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim Number</th>
                                <th>Lecturer</th>
                                <th>Department</th>
                                <th>Period</th>
                                <th>Hours</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Submitted</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>@claim.ClaimNumber</td>
                                    <td>@claim.User?.FullName</td>
                                    <td>@claim.Department?.Name</td>
                                    <td>@claim.ClaimPeriod</td>
                                    <td>@claim.HoursWorked</td>
                                    <td class="fw-bold">R @claim.TotalAmount.ToString("N2")</td>
                                    <td>
                                        @if (claim.Status == "Approved")
                                        {
                                            <span class="badge bg-success">Approved</span>
                                        }
                                        else if (claim.Status == "Rejected")
                                        {
                                            <span class="badge bg-danger">Rejected</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">@claim.Status</span>
                                        }
                                    </td>
                                    <td>@claim.SubmittedDate?.ToString("dd MMM yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@claim.ClaimId" class="btn btn-outline-info">
                                                <i class="fas fa-eye"></i> Review
                                            </a>
                                            @if (claim.CanApprove)
                                            {
                                                <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#approveModal" data-claim-id="@claim.ClaimId" data-claim-number="@claim.ClaimNumber">
                                                    <i class="fas fa-check"></i> Approve
                                                </button>
                                                <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#rejectModal" data-claim-id="@claim.ClaimId" data-claim-number="@claim.ClaimNumber">
                                                    <i class="fas fa-times"></i> Reject
                                                </button>
                                                @if (userRole == "Coordinator")
                                                {
                                                    <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#returnModal" data-claim-id="@claim.ClaimId" data-claim-number="@claim.ClaimNumber">
                                                        <i class="fas fa-undo"></i> Return
                                                    </button>
                                                }
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No Claims Pending Review</h4>
                    <p class="text-muted">All claims have been processed.</p>
                </div>
            }
        </div>
    </div>

    <!-- Role-specific information -->
    @if (userRole == "Coordinator")
    {
        <div class="card mt-4">
            <div class="card-header bg-warning text-dark">
                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Coordinator Responsibilities</h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="fas fa-check-circle text-success me-2"></i>Review claims for completeness and accuracy</li>
                    <li><i class="fas fa-check-circle text-success me-2"></i>Approve valid claims or reject with clear reasoning</li>
                    <li><i class="fas fa-undo text-warning me-2"></i>Return claims requiring additional information</li>
                    <li><i class="fas fa-clock text-info me-2"></i>Process claims within established timeframes</li>
                </ul>
            </div>
        </div>
    }
    else if (userRole == "Manager")
    {
        <div class="card mt-4">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Manager Responsibilities</h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="fas fa-check-double text-success me-2"></i>Provide final approval on coordinator-reviewed claims</li>
                    <li><i class="fas fa-gavel text-danger me-2"></i>Make final decisions on complex cases</li>
                    <li><i class="fas fa-file-invoice-dollar text-primary me-2"></i>Ensure compliance with institutional policies</li>
                    <li><i class="fas fa-clock text-info me-2"></i>Maintain approval workflow efficiency</li>
                </ul>
            </div>
        </div>
    }
</div>

<!-- Approve Modal -->
<div class="modal fade" id="approveModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Approve Claim</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Approve" method="post">
                <div class="modal-body">
                    <p>Are you sure you want to approve claim <strong id="approveClaimNumber"></strong>?</p>
                    <input type="hidden" name="id" id="approveClaimId" />
                    <div class="mb-3">
                        <label for="approveComments" class="form-label">Comments (Optional)</label>
                        <textarea class="form-control" id="approveComments" name="comments" rows="3" placeholder="Add any comments..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Approve Claim</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reject Claim</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Reject" method="post">
                <div class="modal-body">
                    <p>Please provide a reason for rejecting claim <strong id="rejectClaimNumber"></strong>:</p>
                    <input type="hidden" name="id" id="rejectClaimId" />
                    <div class="mb-3">
                        <label for="rejectReason" class="form-label">Reason for Rejection *</label>
                        <input type="text" class="form-control" id="rejectReason" name="reason" required placeholder="Enter reason for rejection...">
                    </div>
                    <div class="mb-3">
                        <label for="rejectComments" class="form-label">Additional Comments</label>
                        <textarea class="form-control" id="rejectComments" name="comments" rows="3" placeholder="Add any additional comments..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Claim</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Return Modal -->
<div class="modal fade" id="returnModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Return Claim for Correction</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Return" method="post">
                <div class="modal-body">
                    <p>Please provide instructions for claim <strong id="returnClaimNumber"></strong>:</p>
                    <input type="hidden" name="id" id="returnClaimId" />
                    <div class="mb-3">
                        <label for="returnComments" class="form-label">Correction Instructions *</label>
                        <textarea class="form-control" id="returnComments" name="comments" required rows="4" placeholder="Provide clear instructions for corrections needed..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Return for Correction</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Modal handlers
        $('#approveModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var claimId = button.data('claim-id');
            var claimNumber = button.data('claim-number');
            var modal = $(this);
            modal.find('#approveClaimId').val(claimId);
            modal.find('#approveClaimNumber').text(claimNumber);
        });

        $('#rejectModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var claimId = button.data('claim-id');
            var claimNumber = button.data('claim-number');
            var modal = $(this);
            modal.find('#rejectClaimId').val(claimId);
            modal.find('#rejectClaimNumber').text(claimNumber);
        });

        $('#returnModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var claimId = button.data('claim-id');
            var claimNumber = button.data('claim-number');
            var modal = $(this);
            modal.find('#returnClaimId').val(claimId);
            modal.find('#returnClaimNumber').text(claimNumber);
        });
    </script>
}