@model Contract_Monthly_Claim_System.Models.Claim
@{
    ViewData["Title"] = "Claim Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <!-- Claim Info -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Claim #@Model.ClaimNumber Details</h5>
                    <span class="badge @(Model.Status == "Approved" ? "bg-success" : Model.Status == "Rejected" ? "bg-danger" : "bg-warning")">
                        @Model.Status
                    </span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Claim Information</h6>
                            <dl class="row">
                                <dt class="col-sm-4">Claim Number:</dt>
                                <dd class="col-sm-8">@Model.ClaimNumber</dd>

                                <dt class="col-sm-4">Submitted:</dt>
                                <dd class="col-sm-8">@Model.ClaimDate.ToString("dd MMM yyyy")</dd>

                                <dt class="col-sm-4">Period:</dt>
                                <dd class="col-sm-8">@Model.ClaimPeriod</dd>

                                <dt class="col-sm-4">Hours Worked:</dt>
                                <dd class="col-sm-8">@Model.HoursWorked</dd>
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <h6>Financial Details</h6>
                            <dl class="row">
                                <dt class="col-sm-4">Hourly Rate:</dt>
                                <dd class="col-sm-8">R @Model.HourlyRate.ToString("N2")</dd>

                                <dt class="col-sm-4">Total Amount:</dt>
                                <dd class="col-sm-8 fw-bold text-success">R @Model.TotalAmount.ToString("N2")</dd>

                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8">@Model.Status</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.WorkDescription))
                    {
                        <div class="mt-3">
                            <h6>Work Description</h6>
                            <div class="border rounded p-3 bg-light">
                                @Model.WorkDescription
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mt-3">
                            <h6>Notes</h6>
                            <div class="border rounded p-3 bg-light">
                                @Model.Notes
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-md-4">
            <!-- Documents Section -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0">Supporting Documents</h6>
                </div>
                <div class="card-body">
                    @if (Model.Documents != null && Model.Documents.Any())
                    {
                        <div class="list-group">
                            @foreach (var document in Model.Documents)
                            {
                                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="fas @GetFileIcon(document.FileType) me-2"></i>
                                        @document.FileName
                                    </div>
                                    <div>
                                        <a asp-controller="Documents" asp-action="Download" asp-route-id="@document.DocumentId"
                                           class="btn btn-sm btn-outline-primary" title="Download">
                                            <i class="fas fa-download"></i>
                                        </a>
                                        @if (Model.CanEdit)
                                        {
                                            <form asp-controller="Documents" asp-action="Delete" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@document.DocumentId" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                        onclick="return confirm('Are you sure you want to delete this document?')" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">No documents uploaded</p>
                    }

                    @if (Model.CanEdit)
                    {
                        <div class="mt-3">
                            <a asp-controller="Documents" asp-action="Upload" asp-route-claimId="@Model.ClaimId"
                               class="btn btn-outline-primary btn-sm w-100">
                                <i class="fas fa-plus me-1"></i>Add Document
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>

                        @if (Model.CanSubmit)
                        {
                            <form asp-action="Submit" method="post" class="d-grid">
                                <input type="hidden" name="id" value="@Model.ClaimId" />
                                <button type="submit" class="btn btn-success"
                                        onclick="return confirm('Are you sure you want to submit this claim for review?')">
                                    <i class="fas fa-paper-plane me-1"></i>Submit for Review
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetFileIcon(string fileType)
    {
        return fileType?.ToLower() switch
        {
            "pdf" => "fa-file-pdf text-danger",
            "doc" or "docx" => "fa-file-word text-primary",
            "xls" or "xlsx" => "fa-file-excel text-success",
            "jpg" or "jpeg" or "png" => "fa-file-image text-warning",
            _ => "fa-file text-secondary"
        };
    }
}