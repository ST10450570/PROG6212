@model IEnumerable<Contract_Monthly_Claim_System.Models.Claim>
@{
    ViewData["Title"] = "Coordinator Dashboard";
    var canApprove = ViewBag.CanApprove ?? false;
    var canFinalApprove = ViewBag.CanFinalApprove ?? false;
    var role = ViewBag.Role ?? "Coordinator";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-list-check me-2"></i>@role Claims Dashboard</h2>
            <p class="text-muted">@Model.Count() claims requiring attention</p>
        </div>
        <span class="badge bg-primary fs-6">Role: @role</span>
    </div>

    <!-- Display message if any -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle me-2"></i>@TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Claims Review Queue</h5>
            <div class="btn-group">
                @if (role == "Coordinator")
                {
                    <span class="badge bg-warning">Review → Approve/Reject → Escalate to Manager</span>
                }
                else if (role == "Manager")
                {
                    <span class="badge bg-info">Final Approval Authority</span>
                }
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Submitted</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>#@claim.ClaimId</td>
                                    <td>Dr. John Smith</td>
                                    <td>@claim.ClaimDate.ToString("dd MMM yyyy")</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>R @claim.HourlyRate</td>
                                    <td class="fw-bold">R @claim.TotalAmount</td>
                                    <td>
                                        @if (claim.Status == "Approved")
                                        {
                                            <span class="badge bg-success">Fully Approved</span>
                                        }
                                        else if (claim.Status == "CoordinatorApproved")
                                        {
                                            <span class="badge bg-info">Awaiting Manager</span>
                                        }
                                        else if (claim.Status == "Rejected")
                                        {
                                            <span class="badge bg-danger">Rejected</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">@claim.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@claim.ClaimId" class="btn btn-outline-info">
                                                <i class="fas fa-eye"></i> View
                                            </a>

                                            @if (canApprove && claim.Status == "Pending")
                                            {
                                                <a asp-action="Approve" asp-route-id="@claim.ClaimId" class="btn btn-outline-success">
                                                    <i class="fas fa-check"></i> @(canFinalApprove ? "Final Approve" : "Approve")
                                                </a>
                                                <a asp-action="Reject" asp-route-id="@claim.ClaimId" class="btn btn-outline-danger">
                                                    <i class="fas fa-times"></i> Reject
                                                </a>

                                                @if (role == "Coordinator")
                                                {
                                                    <a asp-action="Escalate" asp-route-id="@claim.ClaimId" class="btn btn-outline-warning">
                                                        <i class="fas fa-arrow-up"></i> Escalate
                                                    </a>
                                                }
                                            }
                                            else if (canFinalApprove && claim.Status == "CoordinatorApproved")
                                            {
                                                <a asp-action="Approve" asp-route-id="@claim.ClaimId" class="btn btn-outline-success">
                                                    <i class="fas fa-check-double"></i> Final Approve
                                                </a>
                                                <a asp-action="Reject" asp-route-id="@claim.ClaimId" class="btn btn-outline-danger">
                                                    <i class="fas fa-times"></i> Reject
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No claims requiring attention</h4>
                    <p class="text-muted">All claims have been processed.</p>
                </div>
            }
        </div>
    </div>

    <!-- Role-specific information -->
    @if (role == "Coordinator")
    {
        <div class="card mt-4">
            <div class="card-header bg-warning text-dark">
                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Coordinator Guidelines</h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="fas fa-check-circle text-success me-2"></i>Review claims for completeness and accuracy</li>
                    <li><i class="fas fa-check-circle text-success me-2"></i>Approve valid claims or reject with reason</li>
                    <li><i class="fas fa-arrow-up text-warning me-2"></i>Escalate complex cases to Academic Manager</li>
                    <li><i class="fas fa-clock text-info me-2"></i>Process claims within 48 hours of submission</li>
                </ul>
            </div>
        </div>
    }
    else if (role == "Manager")
    {
        <div class="card mt-4">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Manager Guidelines</h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="fas fa-check-double text-success me-2"></i>Provide final approval on coordinator-reviewed claims</li>
                    <li><i class="fas fa-gavel text-danger me-2"></i>Make final decisions on escalated or complex cases</li>
                    <li><i class="fas fa-file-invoice-dollar text-primary me-2"></i>Ensure compliance with institutional policies</li>
                    <li><i class="fas fa-clock text-info me-2"></i>Process claims within 24 hours of coordinator approval</li>
                </ul>
            </div>
        </div>
    }
</div>